<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favBooks">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Books"
        android:textSize="23dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_margin="17dp"
        android:id="@+id/favBooksHeading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favBooksHeading"
        android:text="There are no books yet .... go and select some !!!"
        android:id="@+id/noBooksYet"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favBooksHeading"
        android:layout_centerHorizontal="true"
        android:id="@+id/recyclerViewFavBooks"/>
</RelativeLayout>